<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center">
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center" android:padding="5dp"
                    android:layout_margin="2dp" android:background="@drawable/border">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/layGanapati"
                        android:background="@drawable/border" android:padding="2dp">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp" app:srcCompat="@drawable/ganapti"
                            android:id="@+id/imageGanapati" android:layout_gravity="left" android:paddingLeft="20dp"/>
                    <TextView
                            android:text="आरती गणपतीची "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textGanapati"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                            android:paddingTop="20dp" android:paddingBottom="20dp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/layShankar" android:layout_margin="2dp"
                        android:padding="2dp" android:background="@drawable/border">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageShankar" android:layout_gravity="left" android:paddingLeft="20dp"
                            app:srcCompat="@drawable/shankar"/>
                    <TextView
                            android:text="आरती शंकराची "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textShankar"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                            android:paddingTop="20dp" android:paddingBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/layGuruDatta" android:layout_margin="2dp"
                        android:padding="2dp" android:background="@drawable/border">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp" app:srcCompat="@drawable/datta"
                            android:id="@+id/imageGuruDatta" android:layout_gravity="left" android:paddingLeft="20dp"/>
                    <TextView
                            android:text="आरती गुरुदत्तांची  "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textGuruDatta"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                            android:paddingTop="20dp" android:paddingBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/layVitthal" android:layout_margin="2dp"
                        android:padding="2dp" android:background="@drawable/border">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp" app:srcCompat="@drawable/vitthal"
                            android:id="@+id/imageVitthal" android:layout_gravity="left" android:paddingLeft="20dp"/>
                    <TextView
                            android:text="आरती विठ्ठलाची "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textVitthal"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                            android:paddingTop="20dp" android:paddingBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/layDevi" android:layout_margin="2dp"
                        android:padding="2dp" android:background="@drawable/border">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp" app:srcCompat="@drawable/devi"
                            android:id="@+id/imageDevi" android:layout_gravity="left" android:paddingLeft="20dp"/>
                    <TextView
                            android:text="आरती देवीची "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textDevi"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                            android:paddingTop="20dp" android:paddingBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/layDnyaneshwar"
                    android:layout_margin="2dp"
                    android:padding="2dp" android:background="@drawable/border">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp" app:srcCompat="@drawable/dnyaneshwar"
                        android:id="@+id/imageDnyaneshwar" android:layout_gravity="left"
                        android:paddingLeft="20dp"/>
                <TextView
                        android:text="आरती ज्ञानेश्वरांची "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textDnyaneshwar"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                        android:paddingTop="20dp" android:paddingBottom="20dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/layGhalinLotangan"
                        android:layout_margin="2dp"
                        android:padding="2dp" android:background="@drawable/border">
                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp" app:srcCompat="@drawable/dnyaneshwar"
                            android:id="@+id/imageGhalinLotangan" android:layout_gravity="left"
                            android:paddingLeft="20dp"/>
                    <TextView
                            android:text="घालीन लोटांगण"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textGhalinLotangan"
                            android:gravity="center_vertical|center_horizontal"
                            android:textAlignment="gravity" android:textSize="25sp" android:textStyle="bold"
                            android:paddingTop="20dp" android:paddingBottom="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>